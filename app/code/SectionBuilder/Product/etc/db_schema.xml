<?xml version="1.0" encoding="UTF-8"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="section_builder_product" resource="default" engine="innodb" comment="">
        <column xsi:type="smallint" name="entity_id" padding="6" unsigned="true" nullable="false" identity="true" comment="ID"/>
        <column xsi:type="smallint" name="is_enable" unsigned="true" nullable="false" default="1" comment="Enable product" />
        <column xsi:type="int" name="plan_id" padding="10" unsigned="true" nullable="true" comment="Plan need subscribe"/>
        <column xsi:type="varchar" name="name" nullable="false" length="255" comment="Name"/>
        <column xsi:type="varchar" name="url_key" nullable="false" length="255" comment="Key"/>
        <column xsi:type="decimal" name="price" scale="2" precision="20" unsigned="false" nullable="true" comment="Section price" />
        <column xsi:type="varchar" name="version" nullable="false" default="1.0.0" length="255" comment="Current Version"/>
        <column xsi:type="text" name="media_gallery" nullable="true" comment="Media. Ex: section_builder/product/hokage.jpg;section_builder/product/kiz.png"/>
        <column xsi:type="text" name="description" nullable="true" comment="Description"/>
        <column xsi:type="smallint" name="qty_sold" unsigned="true" nullable="false" default="0" comment="Quantity Sold" />
        <column xsi:type="smallint" name="qty_installed" unsigned="true" nullable="false" default="0" comment="Quantity Installed" />
        <column xsi:type="smallint" name="type_id" unsigned="true" nullable="false" default="1" comment="Type product" />
        <column xsi:type="varchar" name="child_ids" nullable="true" length="255" comment="Child product ids"/>
        <column xsi:type="varchar" name="src" nullable="false" length="255" comment="Src code"/>
        <column xsi:type="text" name="file_data" nullable="true" comment="File Data"/>
        <column xsi:type="text" name="release_note" nullable="true" comment="Release Note"/>
        <column xsi:type="varchar" name="demo_link" nullable="false" length="255" comment="Link demo Shopify frontend"/>
        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="true" comment=""/>
        <column xsi:type="timestamp" name="updated_at" on_update="false" nullable="true" comment=""/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>
        <constraint xsi:type="unique" referenceId="UNIQUE_SRC">
            <column name="src"/>
        </constraint>
        <constraint xsi:type="unique" referenceId="UNIQUE_KEY">
            <column name="url_key"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="fk_sbp_xpp" table="section_builder_product" column="plan_id" referenceTable="$xpify_pricing_plans" referenceColumn="entity_id" onDelete="SET NULL"/>
    </table>

    <table name="section_builder_buy" resource="default" engine="innodb" comment="">
        <column xsi:type="smallint" name="entity_id" padding="6" unsigned="true" nullable="false" identity="true" comment="ID"/>
        <column xsi:type="varchar" name="merchant_shop" nullable="false" length="255" comment="FK xpify_merchants"/>
        <column xsi:type="smallint" name="product_id" padding="6" unsigned="true" nullable="false" comment="FK section_builder_product"/>
        <column xsi:type="text" name="details" comment="Purchase details"/>
        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="true" comment=""/>
        <column xsi:type="timestamp" name="updated_at" on_update="false" nullable="true" comment=""/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>
        <constraint xsi:type="unique" referenceId="UNIQUE_BOUGHT">
            <column name="merchant_shop"/>
            <column name="product_id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="fk_sbb_sbp" table="section_builder_buy" column="product_id" referenceTable="section_builder_product" referenceColumn="entity_id" onDelete="CASCADE" />
    </table>

    <table name="section_builder_install" resource="default" engine="innodb" comment="">
        <column xsi:type="smallint" name="entity_id" padding="6" unsigned="true" nullable="false" identity="true" comment="ID"/>
        <column xsi:type="varchar" name="merchant_shop" nullable="false" length="255" comment="FK xpify_merchants"/>
        <column xsi:type="smallint" name="product_id" padding="6" unsigned="true" nullable="false" comment="FK section_builder_product"/>
        <column xsi:type="varchar" name="theme_id" nullable="false" length="255" comment="Theme installed"/>
        <column xsi:type="varchar" name="product_version" nullable="false" default="1.0.0" length="255" comment="Version"/>
        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="true" comment=""/>
        <column xsi:type="timestamp" name="updated_at" on_update="false" nullable="true" comment=""/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>
        <constraint xsi:type="unique" referenceId="UNIQUE_INSTALLED">
            <column name="merchant_shop"/>
            <column name="product_id"/>
            <column name="theme_id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="fk_sbi_sbp" table="section_builder_install" column="product_id" referenceTable="section_builder_product" referenceColumn="entity_id" onDelete="CASCADE" />
    </table>
</schema>
