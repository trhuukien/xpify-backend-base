<?xml version="1.0" encoding="UTF-8"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="section_builder_product" resource="default" engine="innodb" comment="">
        <column xsi:type="smallint" name="entity_id" padding="6" unsigned="true" nullable="false" identity="true" comment="ID"/>
        <column xsi:type="varchar" name="plan_ids" nullable="false" length="255" comment="Plan need subscribe"/>
        <column xsi:type="varchar" name="name" nullable="false" length="255" comment="Name"/>
        <column xsi:type="decimal" name="price" scale="6" precision="20" unsigned="false" nullable="true" comment="Sections price" />
        <column xsi:type="varchar" name="src" nullable="false" length="255" comment="Src code"/>
        <column xsi:type="text" name="file_data" nullable="true" comment="File Data"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>
        <constraint xsi:type="unique" referenceId="UNIQUE_NAME">
            <column name="name"/>
        </constraint>
    </table>

    <table name="section_builder_install" resource="default" engine="innodb" comment="">
        <column xsi:type="smallint" name="entity_id" padding="6" unsigned="true" nullable="false" identity="true" comment="ID"/>
        <column xsi:type="varchar" name="merchant_shop" nullable="false" length="255" comment="Merchant domain"/>
        <column xsi:type="smallint" name="product_id" padding="6" nullable="false" comment="FK Product"/>
        <column xsi:type="varchar" name="theme_ids" nullable="false" length="255" comment="Install to themes"/>
        <column xsi:type="smallint" name="bought" padding="6" nullable="false" default="0" comment="Section bought"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>
        <constraint xsi:type="unique" referenceId="UNIQUE_NAME">
            <column name="merchant_shop"/>
            <column name="product_id"/>
        </constraint>
    </table>
</schema>
