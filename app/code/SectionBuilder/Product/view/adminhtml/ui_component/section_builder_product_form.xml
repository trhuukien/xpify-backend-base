<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">section_builder_product_form.section_builder_product_form_data_source</item>
            <item name="deps" xsi:type="string">section_builder_product_form.section_builder_product_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Product</item>
        <item name="config" xsi:type="array">
            <item name="dataScope" xsi:type="string">data</item>
            <item name="namespace" xsi:type="string">section_builder_product_form</item>
        </item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="save" class="SectionBuilder\Core\Model\Block\Adminhtml\Form\SaveButton" />
            <button name="back" class="Magento\Customer\Block\Adminhtml\Edit\BackButton" />
        </buttons>
    </settings>
    <dataSource name="section_builder_product_form_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">SectionBuilder\Product\Ui\Component\Form\SectionDataProvider</argument>
            <argument name="name" xsi:type="string">section_builder_product_form_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">main_table.entity_id</argument>
            <argument name="requestFieldName" xsi:type="string">id</argument>
        </argument>
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="section_builder/product/save"/>
        </settings>
    </dataSource>
    <fieldset name="general" sortOrder="10">
        <settings>
            <collapsible>false</collapsible>
            <label />
        </settings>
        <field name="entity_id">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Id</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="dataScope" xsi:type="string">entity_id</item>
                    <item name="visible" xsi:type="boolean">false</item>
                </item>
            </argument>
        </field>
        <field name="is_enable" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">block</item>
                    <item name="default" xsi:type="number">1</item>
                </item>
            </argument>
            <settings>
                <dataType>boolean</dataType>
                <label translate="true">Enable</label>
                <dataScope>is_enable</dataScope>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="number">0</map>
                            <map name="true" xsi:type="number">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
        <field name="name">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Name</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="dataScope" xsi:type="string">name</item>
                    <item name="tooltip" xsi:type="array">
                        <item name="description" xsi:type="string" translate="true">Merchant will see it in the App.</item>
                    </item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                    <rule name="max_text_length" xsi:type="number">255</rule>
                </validation>
            </settings>
        </field>
        <field name="url_key">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Key</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="dataScope" xsi:type="string">url_key</item>
                    <item name="tooltip" xsi:type="array">
                        <item name="description" xsi:type="string" translate="true">You can only update once to avoid affecting merchants using App.</item>
                    </item>
                </item>
            </argument>
            <settings>
                <imports>
                    <link name="disabled">${ $.provider}:data.is_disable</link>
                </imports>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                    <rule name="max_text_length" xsi:type="number">255</rule>
                    <rule name="pattern" xsi:type="string">^[a-z][a-z0-9-]*[a-z0-9]$</rule>
                </validation>
                <notice translate="true">Please enter a-z, 0-9 and -</notice>
            </settings>
        </field>
        <field name="price">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">price</item>
                    <item name="label" xsi:type="string" translate="true">Price</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="dataScope" xsi:type="string">price</item>
                    <item name="addbefore" xsi:type="string">$</item>
                    <item name="additionalClasses" xsi:type="string">admin__field-small</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                    <rule name="validate-number" xsi:type="boolean">true</rule>
                    <rule name="validate-zero-or-greater" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="plan_id">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">SectionBuilder\Product\Ui\Component\Form\OptionTree\PricingPlan</item>
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Plan</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="dataScope" xsi:type="string">plan_id</item>
                    <item name="additionalClasses" xsi:type="string">admin__field-small</item>
                </item>
            </argument>
            <settings>
                <imports>
                    <link name="visible">!${ $.provider}:data.is_group_product</link>
                </imports>
            </settings>
        </field>
        <field name="version">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Version</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="dataScope" xsi:type="string">version</item>
                    <item name="addbefore" xsi:type="string">v</item>
                    <item name="additionalClasses" xsi:type="string">admin__field-small</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                    <rule name="max_text_length" xsi:type="number">255</rule>
                    <rule name="pattern" xsi:type="string">^[1-9]+\.[0-9]+\.[0-9]+$</rule>
                </validation>
                <notice translate="true">Please enter 0-9 and .</notice>
                <imports>
                    <link name="visible">!${ $.provider}:data.is_group_product</link>
                </imports>
            </settings>
        </field>
        <field name="categories" component="Magento_Ui/js/form/element/ui-select" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filterOptions" xsi:type="boolean">true</item>
                    <item name="multiple" xsi:type="boolean">true</item>
                    <item name="showCheckbox" xsi:type="boolean">true</item>
                    <item name="disableLabel" xsi:type="boolean">true</item>
                    <item name="filterPlaceholder" xsi:type="string" translate="true">Search Category...</item>
                    <item name="emptyOptionsHtml" xsi:type="string" translate="true">Start typing to find Category</item>
                </item>
            </argument>
            <settings>
                <required>true</required>
                <elementTmpl>ui/grid/filters/elements/ui-select</elementTmpl>
                <label translate="true">Categories</label>
                <dataScope>categories</dataScope>
                <componentType>field</componentType>
                <listens>
                    <link name="${ $.namespace }.${ $.namespace }:responseData">setParsed</link>
                </listens>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="SectionBuilder\Product\Ui\Component\Form\OptionTree\Category"/>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="tags" component="Magento_Ui/js/form/element/ui-select" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filterOptions" xsi:type="boolean">true</item>
                    <item name="multiple" xsi:type="boolean">true</item>
                    <item name="showCheckbox" xsi:type="boolean">true</item>
                    <item name="disableLabel" xsi:type="boolean">true</item>
                    <item name="filterPlaceholder" xsi:type="string" translate="true">Search Tag...</item>
                    <item name="emptyOptionsHtml" xsi:type="string" translate="true">Start typing to find Tag</item>
                </item>
            </argument>
            <settings>
                <required>true</required>
                <elementTmpl>ui/grid/filters/elements/ui-select</elementTmpl>
                <label translate="true">Tags</label>
                <dataScope>tags</dataScope>
                <componentType>field</componentType>
                <listens>
                    <link name="${ $.namespace }.${ $.namespace }:responseData">setParsed</link>
                </listens>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="SectionBuilder\Product\Ui\Component\Form\OptionTree\Tag"/>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="demo_link">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">URL Demo</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="dataScope" xsi:type="string">demo_link</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="max_text_length" xsi:type="number">255</rule>
                    <rule name="pattern" xsi:type="string">^http</rule>
                </validation>
                <imports>
                    <link name="visible">!${ $.provider}:data.is_group_product</link>
                </imports>
            </settings>
        </field>
    </fieldset>
    <fieldset name="assign_product_grid" sortOrder="15">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="label" xsi:type="string" translate="true">Grouped Products</item>
                <item name="collapsible" xsi:type="boolean">true</item>
                <item name="opened" xsi:type="boolean">true</item>
            </item>
        </argument>
        <settings>
            <imports>
                <link name="visible">${ $.provider}:data.is_group_product</link>
            </imports>
        </settings>
        <container name="assign_products_container" >
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">10</item>
                </item>
            </argument>
            <htmlContent name="html_content">
                <argument name="block" xsi:type="object">SectionBuilder\Product\Block\Adminhtml\AssignProducts</argument>
            </htmlContent>
        </container>
    </fieldset>
    <fieldset name="content" sortOrder="20">
        <settings>
            <label translate="true">Content</label>
            <collapsible>true</collapsible>
        </settings>
        <field name="description">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">wysiwyg</item>
                    <item name="wysiwyg" xsi:type="boolean">true</item>
                    <item name="wysiwygConfigData" xsi:type="array">
                        <item name="is_pagebuilder_enabled" xsi:type="boolean">false</item>
                    </item>
                    <item name="label" xsi:type="string">Description</item>
                    <item name="template" xsi:type="string">ui/form/field</item>
                    <item name="dataScope" xsi:type="string">description</item>
                    <item name="rows" xsi:type="number">8</item>
                </item>
            </argument>
        </field>
        <field name="release_note">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">wysiwyg</item>
                    <item name="wysiwyg" xsi:type="boolean">true</item>
                    <item name="wysiwygConfigData" xsi:type="array">
                        <item name="is_pagebuilder_enabled" xsi:type="boolean">false</item>
                    </item>
                    <item name="label" xsi:type="string">Release Note</item>
                    <item name="template" xsi:type="string">ui/form/field</item>
                    <item name="dataScope" xsi:type="string">release_note</item>
                    <item name="rows" xsi:type="number">8</item>
                </item>
            </argument>
            <settings>
                <imports>
                    <link name="visible">!${ $.provider}:data.is_group_product</link>
                </imports>
            </settings>
        </field>
    </fieldset>
    <fieldset name="gallery" sortOrder="30">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="collapsible" xsi:type="boolean">true</item>
                <item name="label" xsi:type="string" translate="true">
                    Media Gallery
                </item>
                <item name="sortOrder" xsi:type="number">22</item>
            </item>
        </argument>
        <container name="gallery" >
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">10</item>
                </item>
            </argument>
            <htmlContent name="gallery">
                <argument name="block" xsi:type="object">
                    SectionBuilder\Product\Block\Adminhtml\Listing\Helper\Form\Gallery
                </argument>
            </htmlContent>
        </container>
    </fieldset>
    <fieldset name="file" sortOrder="40">
        <settings>
            <label translate="true">File Management</label>
            <collapsible>true</collapsible>
            <imports>
                <link name="visible">!${ $.provider}:data.is_group_product</link>
            </imports>
        </settings>
        <field name="src">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">File Src</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="dataScope" xsi:type="string">src</item>
                    <item name="tooltip" xsi:type="array">
                        <item name="description" xsi:type="string" translate="true">Path to save source code in the merchant's theme after the merchant installed Section.</item>
                    </item>
                </item>
            </argument>
            <settings>
                <imports>
                    <link name="disabled">${ $.provider}:data.is_disable</link>
                    <link name="visible">!${ $.provider}:data.is_group_product</link>
                </imports>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                    <rule name="max_text_length" xsi:type="number">255</rule>
                    <rule name="pattern" xsi:type="string">^[a-z-_]+\/[a-z0-9-_]+\.[a-z]+$</rule>
                </validation>
                <notice translate="true">Ex: sections/bss-section-about01.liquid</notice>
            </settings>
        </field>
        <field name="path_source">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Path</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="dataScope" xsi:type="string">path_source</item>
                    <item name="tooltip" xsi:type="array">
                        <item name="description" xsi:type="string" translate="true">This is path file in project gitlab.</item>
                    </item>
                </item>
            </argument>
            <settings>
                <imports>
                    <link name="visible">!${ $.provider}:data.is_group_product</link>
                </imports>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                    <rule name="max_text_length" xsi:type="number">255</rule>
                    <rule name="pattern" xsi:type="string">^[a-zA-Z0-9-_\/]+\.[a-z]+$</rule>
                </validation>
                <notice translate="true">Ex: app/section-builder/sections/bss-section-about01.liquid</notice>
            </settings>
        </field>
    </fieldset>
    <fieldset name="information" sortOrder="50">
        <settings>
            <label translate="true">Information</label>
            <collapsible>true</collapsible>
        </settings>
        <field name="qty_installed" formElement="input">
            <settings>
                <label translate="true">Installed</label>
                <dataScope>qty_installed</dataScope>
                <elementTmpl>ui/form/element/text</elementTmpl>
                <imports>
                    <link name="visible">!${ $.provider}:data.is_group_product</link>
                </imports>
            </settings>
        </field>
        <field name="qty_sold" formElement="input">
            <settings>
                <label translate="true">Sold</label>
                <dataScope>qty_sold</dataScope>
                <elementTmpl>ui/form/element/text</elementTmpl>
            </settings>
        </field>
    </fieldset>
</form>
