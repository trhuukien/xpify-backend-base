<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">section_builder_product_form.section_builder_product_form_data_source</item>
            <item name="deps" xsi:type="string">section_builder_product_form.section_builder_product_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Product</item>
        <item name="config" xsi:type="array">
            <item name="dataScope" xsi:type="string">data</item>
            <item name="namespace" xsi:type="string">section_builder_product_form</item>
        </item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="save" class="SectionBuilder\Core\Model\Block\Adminhtml\Form\SaveButton" />
            <button name="back" class="Magento\Customer\Block\Adminhtml\Edit\BackButton" />
        </buttons>
    </settings>
    <dataSource name="section_builder_product_form_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">SectionBuilder\Product\Ui\Component\Form\SectionDataProvider</argument>
            <argument name="name" xsi:type="string">section_builder_product_form_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">main_table.entity_id</argument>
            <argument name="requestFieldName" xsi:type="string">id</argument>
        </argument>
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="section_builder/product/save"/>
        </settings>
    </dataSource>
    <fieldset name="general" sortOrder="10">
        <settings>
            <collapsible>false</collapsible>
            <label />
        </settings>
        <field name="entity_id">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Id</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="dataScope" xsi:type="string">entity_id</item>
                    <item name="visible" xsi:type="boolean">false</item>
                </item>
            </argument>
        </field>
        <field name="is_enable" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">block</item>
                    <item name="default" xsi:type="number">1</item>
                </item>
            </argument>
            <settings>
                <dataType>boolean</dataType>
                <label translate="true">Enable</label>
                <dataScope>is_enable</dataScope>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="number">0</map>
                            <map name="true" xsi:type="number">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
        <field name="name">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Name</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="dataScope" xsi:type="string">name</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <notice translate="true">Notice: Unique and Can't change</notice>
            </settings>
        </field>
        <field name="price">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">price</item>
                    <item name="label" xsi:type="string" translate="true">Price</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="dataScope" xsi:type="string">price</item>
                    <item name="addbefore" xsi:type="string">$</item>
                    <item name="additionalClasses" xsi:type="string">admin__field-small</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                    <rule name="validate-number" xsi:type="boolean">true</rule>
                    <rule name="validate-zero-or-greater" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="plan_id">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">SectionBuilder\Product\Ui\Component\Form\OptionTree\PricingPlan</item>
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Plan</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="dataScope" xsi:type="string">plan_id</item>
                    <item name="additionalClasses" xsi:type="string">admin__field-small</item>
                </item>
            </argument>
        </field>
        <field name="categories" component="Magento_Ui/js/form/element/ui-select" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filterOptions" xsi:type="boolean">true</item>
                    <item name="multiple" xsi:type="boolean">true</item>
                    <item name="showCheckbox" xsi:type="boolean">true</item>
                    <item name="disableLabel" xsi:type="boolean">true</item>
                    <item name="filterPlaceholder" xsi:type="string" translate="true">Search Category...</item>
                    <item name="emptyOptionsHtml" xsi:type="string" translate="true">Start typing to find Category</item>
                </item>
            </argument>
            <settings>
                <required>true</required>
                <elementTmpl>ui/grid/filters/elements/ui-select</elementTmpl>
                <label translate="true">Categories</label>
                <dataScope>categories</dataScope>
                <componentType>field</componentType>
                <listens>
                    <link name="${ $.namespace }.${ $.namespace }:responseData">setParsed</link>
                </listens>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="SectionBuilder\Product\Ui\Component\Form\OptionTree\Category"/>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="tags" component="Magento_Ui/js/form/element/ui-select" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filterOptions" xsi:type="boolean">true</item>
                    <item name="multiple" xsi:type="boolean">true</item>
                    <item name="showCheckbox" xsi:type="boolean">true</item>
                    <item name="disableLabel" xsi:type="boolean">true</item>
                    <item name="filterPlaceholder" xsi:type="string" translate="true">Search Tag...</item>
                    <item name="emptyOptionsHtml" xsi:type="string" translate="true">Start typing to find Tag</item>
                </item>
            </argument>
            <settings>
                <required>true</required>
                <elementTmpl>ui/grid/filters/elements/ui-select</elementTmpl>
                <label translate="true">Tags</label>
                <dataScope>tags</dataScope>
                <componentType>field</componentType>
                <listens>
                    <link name="${ $.namespace }.${ $.namespace }:responseData">setParsed</link>
                </listens>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="SectionBuilder\Product\Ui\Component\Form\OptionTree\Tag"/>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="src">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Src File</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="dataScope" xsi:type="string">src</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <notice translate="true">Ex: sections/bss-section-about01.liquid</notice>
            </settings>
        </field>
        <field name="file_data">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">File Content</item>
                    <item name="formElement" xsi:type="string">textarea</item>
                    <item name="rows" xsi:type="number">20</item>
                    <item name="dataScope" xsi:type="string">file_data</item>
                </item>
            </argument>
        </field>
    </fieldset>
</form>
